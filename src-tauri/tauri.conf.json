{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "DocuForge",
	"version": "0.2.1",
	"identifier": "docuforge",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "DocuForge",
				"width": 800,
				"height": 700,
				"minWidth": 800,
				"minHeight": 700,
				"dragDropEnabled": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"createUpdaterArtifacts": true,
		"active": true,
		"targets": ["nsis"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["binaries/python_backend"],
		"resources": { "binaries/internal": "internal/" }
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJENDM3Q0E5QUE0NkRGRDkKUldUWjMwYXFxWHhETFh2QXAyelVXaGlERXllRXc1VDFWamhYQ0xmTGJYT2M0Y1JqSXU4Q1FIVUQK",
			"endpoints": [
				"https://github.com/PazminoJose/docu-forge-app/releases/latest/download/latest.json"
			]
		}
	}
}
