{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"updater:default",
		"core:default",
		"opener:default",
		"dialog:default",
		"shell:default",
		{
			"identifier": "opener:allow-open-path",
			"allow": [
				{
					"path": "/**"
				}
			]
		}
	]
}
